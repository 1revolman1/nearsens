section.productpage__productslinked.productlist__products
    .productlist__products__wrap.main
        h3 The products
        .productlist__products-container
            each val,index in [1,2]
                .productlist__products-container-element
                    img(src="https://www.planetware.com/wpimages/2020/02/france-in-pictures-beautiful-places-to-photograph-eiffel-tower.jpg", alt="")
                    .productlist__products-container-element-controller
                        .productlist__products-container-element-text
                            h4 Product name on two lines
                            p Short description on one line
                        .productlist__products-container-element-controllers
                            .productlist__products-container-element-controllers-price
                                span.price 89
                                    sup €99
                            .productlist__products-container-element-controllers-counter
                                button(class="minus" disabled="disabled"): i(class="fas fa-minus")
                                span 5
                                button.plus: i(class="fas fa-plus")
                            .productlist__products-container-element-controllers-shop
                                button 
                                    i(class="fas fa-shopping-basket")
                .productlist__products-container-element.with-disqount
                    img(src="https://www.planetware.com/wpimages/2020/02/france-in-pictures-beautiful-places-to-photograph-eiffel-tower.jpg", alt="")
                    span.productlist__products-container-element-disqount -50%
                    .productlist__products-container-element-controller
                        .productlist__products-container-element-text
                            h4 Product name on two lines
                            p Short description on one line
                        .productlist__products-container-element-controllers
                            .productlist__products-container-element-controllers-price
                                span.price 89
                                    sup €99
                            .productlist__products-container-element-controllers-counter
                                button(class="minus" disabled="disabled"): i(class="fas fa-minus")
                                span 5
                                button.plus: i(class="fas fa-plus")
                            .productlist__products-container-element-controllers-shop
                                button 
                                    i(class="fas fa-shopping-basket")