section.cart__productcontainer
    .cart__productcontainer__head
        span.text.div1 Product name
        span.text.div2 Price
        span.text.div3 Quantity
        span.text.div4
            i.far.fa-trash-alt
    .cart__productcontainer__container
        each val in [1,2,3,4]
            .cart__productcontainer__container__element
                .cart__productcontainer__container__element__textcont
                    .cart__productcontainer__container__element__textcont__img
                        img(src="img/product10.png", alt="")
                    .cart__productcontainer__container__element__textcont__text
                        h4 
                            |Product name lorem ipsum
                            span.cart__productcontainer__container__element__textcont__text__disqount -50%
                        p In stock
                .cart__productcontainer__container__element__price
                    span.price.price-disqount 69
                        sup €99 
                    span.price 49
                        sup €99 
                .cart__productcontainer__container__element__quantity
                    button.cart__productcontainer__container__element__quantity__btn.minus
                        i.fas.fa-minus
                    span.cart__productcontainer__container__element__quantity__ammount 0
                    button.cart__productcontainer__container__element__quantity__btn.plus
                        i.fas.fa-plus
                .cart__productcontainer__container__element__remove
                    i.fas.fa-times  
                    //- img(src="img/letter-x.svg", alt="")
                    //- .cross
        .cart__productcontainer__container__element.gateway
                .cart__productcontainer__container__element__textcont
                    .cart__productcontainer__container__element__textcont__img
                        img(src="img/product10.png", alt="")
                    .cart__productcontainer__container__element__textcont__text
                        h4 Product name lorem ipsum
                        p In stock
                .cart__productcontainer__container__element__price
                    //- span.price.price-disqount 69
                    //-     sup €99 
                    span.price 949
                        sup €99 
                .cart__productcontainer__container__element__quantity
