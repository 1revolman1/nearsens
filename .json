{
  "env": {
    "jquery": true
  },
  "overrides": [
    {
      "files": [ "src/**/*.js" ],
      "extends": [
        "standard",
        "htmlacademy/es6"
      ],
      "rules": {
        "indent": [
          "error",
          4
        ],
        "semi": [
          "error",
          "never"
        ],
        "quotes": [
          "error",
          "backtick"
        ]
      }
    }
  ],

  "extends": [
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
        "semi": [
          1,
          "always"
        ]
  }
}
